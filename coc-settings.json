{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.messageLevel": "error", 
  "coc.source.syntax.firstMatch": false,
  "suggest.labelMaxLength": 20,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.autoTrigger": "always",
  "suggest.timeout": 5000,
  "suggest.detailField": "preview",
  "suggest.snippetIndicator": "",
  "suggest.triggerCompletionWait": 50,
  "suggest.floatConfig": {
      "border": true,
      "rounded": true,
      "winblend": 10
  },

  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b",
    "constant": "\uf8fe",
    "default": "\uf29c",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "event": "\ufacd",
    "field": "\uf93d",
    "file": "\uf723",
    "folder": "\uf115",
    "function": "\u0192",
    "interface": "\uf417",
    "keyword": "\uf1de",
    "method": "\uf6a6",
    "module": "\uf40d",
    "operator": "\uf915",
    "property": "\ue624",
    "reference": "\ufa46",
    "snippet": "\ue60b",
    "struct": "\ufb44",
    "text": "\ue612",
    "typeParameter": "\uf728",
    "unit": "\uf475",
    "value": "\uf89f",
    "variable": "\ue71b"
  },
  "diagnostic.errorSign": "\uf467",
  "diagnostic.warningSign": "\uf071",
  "diagnostic.infoSign": "\uf129",
  "diagnostic.hintSign": "\uf864",
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualTextPrefix": " ‚ùØ‚ùØ‚ùØ ",
  "diagnostic.virtualText": false,
  "diagnostic.floatConfig": {
      "title": "Diag:",
      "border": true,
      "maxWidth": 50,
      "winblend": 20
  },
  
  "hover.floatConfig": {
      "border": true,
      "title": "hoshino",
      "maxHeight": 40,
      "rounded": true,
      "shadow": false,
      "winblend": 5
  },

  "prettier.disableLanguages": [],
  "prettier.formatterPriority": 10,
  "prettier.ignorePath": ".prettierignore",

  "snippets.shortcut": "üê±",
  "snippets.userSnippetsDirectory": "$HOME/.config/nvim/snips",
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": [
      "$HOME/.config/nvim/snips"
  ],

  "codeLens.enable": true,

  "yaml.format.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.completion": true,

  "typescript.format.enable": true,
  "typescript.suggestionActions.enabled": true,

  "json.format.enable": true,
  "json.format.keepLines": true,

  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.diagnostics.globals": ["vim"],
  "Lua.format.enable": true,
  "Lua.runtime.version": "LuaJIT",
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua",
    "/usr/share/nvim/runtime/lua/vim/lsp"
  ],

  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "python.analysis.autoImportCompletions": true,
  "python.analysis.stubPath": "typings",
  "python.analysis.typeshedPaths": [],
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [],
  "python.venvPath": "$HOME/.local/pyvenvs",
  "python.linting.mypyEnabled": false,
  "python.linting.ruffEnabled": true,
  "python.linting.ruffArgs": [],
  "pyright.organizeimports.provider": "ruff",
  "pyright.testing.provider": "pytest",
  "pyright.testing.pytestArgs": [],

  "signature.target": "float",

  "languageserver": {
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "settings": {
        "Lua": {
          "workspace.library": {
            "/usr/share/nvim/runtime/lua": true,
            "/usr/share/nvim/runtime/lua/vim": true,
            "/usr/share/nvim/runtime/lua/vim/lsp": true
          },
          "diagnostics": {
            "globals": ["vim"]
          }
        }
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": ["build/"],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"],
      "settings": {
        "haskell": {
          "checkParents": "CheckOnSave",
          "checkProject": true,
          "maxCompletions": 40,
          "formattingProvider": "ormolu",
          "plugin": {
            "stan": { "globalOn": true }
          }
        }
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "cSpell.userWords": [
    "GEOIP",
    "GEOSITE",
    "bilibili",
    "cmake",
    "gmail",
    "googleapis",
    "gstatic",
    "langserver",
    "mypy",
    "nvim",
    "prettierignore",
    "pyright",
    "pytest",
    "typeshed",
    "ultisnips",
    "venv",
    "wxss",
    "youtube"
  ]
}
